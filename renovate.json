{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    ":preserveSemverRanges",
    "github>d-koppenhagen/renovate-config-angular"
  ],
  "semanticCommits": "enabled",
  "semanticCommitType": "chore",
  "dependencyDashboard": true,
  "labels": ["renovate"],
  "baseBranches": ["main"],
  "includePaths": ["package.json", "**/package.json", "!node_modules/**"],
  "rangeStrategy": "replace",
  "packageRules": [
    {
      "matchPackagePatterns": ["^prettier"],
      "groupSlug": "prettier",
      "groupName": "prettier dependencies"
    },
    {
      "matchPackagePatterns": [
        "^@angular-eslint/.*",
        "^@types/eslint$",
        "^@typescript-eslint/.*",
        "^eslint.*"
      ],
      "groupSlug": "angular eslint",
      "groupName": "angular eslint dependencies"
    },
    {
      "matchPackagePatterns": ["^@commitlint/.*"],
      "groupSlug": "commitlint",
      "groupName": "commitlint dependencies"
    },
    {
      "matchPackagePatterns": ["^@fortawesome/.*"],
      "groupSlug": "fortawesome",
      "groupName": "fortawesome dependencies"
    },
    {
      "matchPackagePatterns": ["^@ngneat/transloco*"],
      "groupSlug": "transloco",
      "groupName": "transloco dependencies"
    }
  ],
  "ignoreDeps": [
    "@angular/animations",
    "@angular/cdk",
    "@angular/common",
    "@angular/compiler",
    "@angular/core",
    "@angular/forms",
    "@angular/platform-browser",
    "@angular/platform-browser-dynamic",
    "@angular/router",
    "@angular/service-worker",
    "@angular/youtube-player",
    "rxjs",
    "tslib",
    "zone.js",
    "@angular-devkit/build-angular",
    "@angular/cli",
    "@angular/compiler-cli",
    "@angular/language-service",
    "@types/jasmine",
    "@types/jasminewd2",
    "@types/node",
    "jasmine-core",
    "jasmine-spec-reporter",
    "karma",
    "karma-chrome-launcher",
    "karma-coverage",
    "karma-jasmine",
    "karma-jasmine-html-reporter",
    "protractor",
    "ts-node",
    "typescript"
  ]
}
