{
  "extends": ["config:base"],
  "semanticCommits": "enabled",
  "dependencyDashboard": false,
  "labels": ["renovate"],
  "baseBranches": ["main"],
  "includePaths": ["package.json", "**/package.json", "!node_modules/**"],
  "packageRules": [
    {
      "matchPackagePatterns": ["^rxjs.*"],
      "groupSlug": "rxjs",
      "groupName": "rxjs dependencies"
    },
    {
      "matchPackagePatterns": ["^prettier"],
      "groupSlug": "prettier",
      "groupName": "prettier dependencies"
    },
    {
      "matchPackagePatterns": [
        "^@angular/.*",
        "^@angular-devkit/.*",
        "^@angular/cli$",
        "^@angular/compiler-cli$",
        "^@angular/cdk$",
        "^@angular/cdk-experimental$",
        "^@angular/language-service$",
        "^@angular/flex-layout$",
        "^@angular/material$",
        "^@angular/youtube-player$",
        "^zone.js"
      ],
      "groupSlug": "angular",
      "groupName": "angular dependencies",
      "postUpgradeTasks": {
        "commands": [
          "ng update {{{depName}}} --from={{{fromVersion}}} --to={{{toVersion}}} --migrate-only --allow-dirty --force"
        ],
        "fileFilters": ["**/**"]
      }
    },
    {
      "matchPackagePatterns": [
        "^@angular-eslint/.*",
        "^@types/eslint$",
        "^@typescript-eslint/.*",
        "^eslint.*"
      ],
      "groupSlug": "angular eslint",
      "groupName": "angular eslint dependencies",
      "postUpgradeTasks": {
        "commands": [
          "ng update @angular-eslint/schematics --from={{{fromVersion}}} --to={{{toVersion}}} --migrate-only --allow-dirty --force"
        ],
        "fileFilters": ["**/**"]
      }
    },
    {
      "matchPackagePatterns": ["^@commitlint/.*"],
      "groupSlug": "commitlint",
      "groupName": "commitlint dependencies"
    },
    {
      "matchPackagePatterns": ["^@fortawesome/.*"],
      "groupSlug": "fortawesome",
      "groupName": "fortawesome dependencies"
    },
    {
      "matchPackagePatterns": ["^@ngneat/transloco*"],
      "groupSlug": "transloco",
      "groupName": "transloco dependencies"
    },
    {
      "matchPackagePatterns": ["@types/karma.*", "^karma.*"],
      "groupSlug": "karma",
      "groupName": "karma dependencies"
    },
    {
      "matchPackagePatterns": [
        "@types/jasmine",
        "@types/jasmine*",
        "^jasmine.*"
      ],
      "groupSlug": "jasmine",
      "groupName": "jasmine dependencies"
    },
    {
      "matchPackagePatterns": ["@types/node"],
      "groupSlug": "nodejs",
      "groupName": "nodejs dependencies"
    },
    {
      "matchPackagePatterns": ["^typescript", "^tslib"],
      "groupSlug": "typescript",
      "groupName": "typescript dependencies"
    }
  ]
}
